<Window x:Class="TimeRenderer.SimpleTextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="作業タイトルの入力" Height="180" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="タイトルを入力してください:" Style="{StaticResource FieldLabelStyle}" Margin="0,0,0,8"/>
        
        <TextBox x:Name="InputTextBox" Grid.Row="1" Margin="0,0,0,16" 
                 VerticalAlignment="Top" Style="{StaticResource InputTextBoxStyle}"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">            
            <Button Content="OK" IsDefault="True" Click="OkButton_Click" Width="80" Margin="0,0,10,0" Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Cancel" IsCancel="True" Width="80" Style="{StaticResource BaseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
