<Window x:Class="TimeRenderer.SimpleTextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="作業タイトルの入力" Height="140" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="タイトルを入力してください:" Margin="0,0,0,5"/>
        
        <TextBox x:Name="InputTextBox" Grid.Row="1" Margin="0,0,0,10" 
                 VerticalAlignment="Top" Padding="3"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" Click="OkButton_Click" Width="60" Margin="0,0,10,0"/>
            <Button Content="Cancel" IsCancel="True" Width="60"/>
        </StackPanel>
    </Grid>
</Window>
