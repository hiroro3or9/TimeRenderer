<Window x:Class="TimeRenderer.ScheduleEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="スケジュール編集" Height="540" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- テキストボックスのスタイル -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- ラベルのスタイル -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#444444"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="タイトル" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="TitleTextBox" Style="{StaticResource InputTextBox}"/>
        </StackPanel>

        <!-- 内容 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="内容" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="ContentTextBox" Style="{StaticResource InputTextBox}" Height="60"
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- 日付 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock Text="日付" Style="{StaticResource FieldLabel}"/>
            <DatePicker x:Name="DatePicker" Width="140" HorizontalAlignment="Left" Padding="4,2"/>
        </StackPanel>

        <!-- 終日チェックボックス -->
        <CheckBox Grid.Row="3" x:Name="AllDayCheckBox" Content="終日" Margin="0,0,0,12" Checked="AllDayCheckBox_Changed" Unchecked="AllDayCheckBox_Changed"/>

        <!-- 開始時刻 -->
        <StackPanel x:Name="StartTimePanel" Grid.Row="4" Margin="0,0,0,12">
            <TextBlock Text="開始時刻" Style="{StaticResource FieldLabel}"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="StartHourCombo" Width="70" FontSize="14" Padding="6,4"/>
                <TextBlock Text=":" VerticalAlignment="Center" Margin="4,0" FontSize="16"/>
                <ComboBox x:Name="StartMinuteCombo" Width="70" FontSize="14" Padding="6,4"/>
            </StackPanel>
        </StackPanel>

        <!-- 終了時刻 -->
        <StackPanel x:Name="EndTimePanel" Grid.Row="5" Margin="0,0,0,12">
            <TextBlock Text="終了時刻" Style="{StaticResource FieldLabel}"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="EndHourCombo" Width="70" FontSize="14" Padding="6,4"/>
                <TextBlock Text=":" VerticalAlignment="Center" Margin="4,0" FontSize="16"/>
                <ComboBox x:Name="EndMinuteCombo" Width="70" FontSize="14" Padding="6,4"/>
            </StackPanel>
        </StackPanel>

        <!-- 色 -->
        <StackPanel Grid.Row="6" Margin="0,0,0,12">
            <TextBlock Text="色" Style="{StaticResource FieldLabel}"/>
            <ComboBox x:Name="ColorCombo" Width="200" HorizontalAlignment="Left" FontSize="14" Padding="6,4">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="20" Background="{Binding Brush}" CornerRadius="3" Margin="0,0,8,0" BorderBrush="#CCCCCC" BorderThickness="1"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="キャンセル" Width="100" Height="34" Margin="0,0,10,0"
                    Click="CancelButton_Click" FontSize="13"
                    Background="White" BorderBrush="#CCCCCC"/>
            <Button Content="OK" Width="100" Height="34"
                    Click="OkButton_Click" FontSize="13" FontWeight="SemiBold"
                    Background="#4A90D9" Foreground="White" BorderBrush="#3A7BC8"/>
        </StackPanel>
    </Grid>
</Window>
