<Window x:Class="TimeRenderer.ScheduleEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="スケジュール編集" Height="640" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <!-- ローカルリソースはThemes/Styles.xamlのものを使用するため削除 -->
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="タイトル" Style="{StaticResource FieldLabelStyle}"/>
            <TextBox x:Name="TitleTextBox" Style="{StaticResource InputTextBoxStyle}"/>
        </StackPanel>

        <!-- 内容 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="内容" Style="{StaticResource FieldLabelStyle}"/>
            <TextBox x:Name="ContentTextBox" Style="{StaticResource InputTextBoxStyle}" Height="80"
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- 日付 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <TextBlock Text="日付" Style="{StaticResource FieldLabelStyle}"/>
            <DatePicker x:Name="DatePicker" Width="160" HorizontalAlignment="Left" Padding="4,4" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- 終日チェックボックス -->
        <CheckBox Grid.Row="3" x:Name="AllDayCheckBox" Content="終日" Margin="0,0,0,16" Checked="AllDayCheckBox_Changed" Unchecked="AllDayCheckBox_Changed" VerticalContentAlignment="Center"/>

        <!-- 開始時刻 -->
        <StackPanel x:Name="StartTimePanel" Grid.Row="4" Margin="0,0,0,16">
            <TextBlock Text="開始時刻" Style="{StaticResource FieldLabelStyle}"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="StartHourCombo" Width="80" FontSize="14" Padding="6,6"/>
                <TextBlock Text=":" VerticalAlignment="Center" Margin="6,0" FontSize="16" FontWeight="Bold"/>
                <ComboBox x:Name="StartMinuteCombo" Width="80" FontSize="14" Padding="6,6"/>
            </StackPanel>
        </StackPanel>

        <!-- 終了時刻 -->
        <StackPanel x:Name="EndTimePanel" Grid.Row="5" Margin="0,0,0,16">
            <TextBlock Text="終了時刻" Style="{StaticResource FieldLabelStyle}"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="EndHourCombo" Width="80" FontSize="14" Padding="6,6"/>
                <TextBlock Text=":" VerticalAlignment="Center" Margin="6,0" FontSize="16" FontWeight="Bold"/>
                <ComboBox x:Name="EndMinuteCombo" Width="80" FontSize="14" Padding="6,6"/>
            </StackPanel>
        </StackPanel>

        <!-- 色 -->
        <StackPanel Grid.Row="6" Margin="0,0,0,16">
            <TextBlock Text="色" Style="{StaticResource FieldLabelStyle}"/>
            <ComboBox x:Name="ColorCombo" Width="200" HorizontalAlignment="Left" FontSize="14" Padding="6,6">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="20" Background="{Binding Brush}" CornerRadius="3" Margin="0,0,8,0" BorderBrush="#CCCCCC" BorderThickness="1"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="キャンセル" Width="100" Height="36" Margin="0,0,12,0"
                    Click="CancelButton_Click" Style="{StaticResource BaseButtonStyle}"/>
            <Button Content="OK" Width="100" Height="36"
                    Click="OkButton_Click" Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
